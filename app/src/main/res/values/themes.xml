<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Esh7enlyUser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
    </style>

    <style name="NewEditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
    </style>

    <style name="ChangePasswordEditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:layout_marginTop">@dimen/_40sdp</item>
    </style>


    <style name="MyCardViewService" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialCardView.Cut.Service
        </item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="" tools:ignore="DuplicateDefinition">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">120dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut.Service" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    // Payment Dialog

    <style name="TBHeading">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_black_1000</item>

    </style>

    <style name="TBDrawerTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:drawableTint">@color/md_white_1000</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TBMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
    </style>

    <style name="TBMaterialButtonStyle.Filled">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="TBMaterialButtonStyle.Stroked">
        <item name="backgroundTint">@color/md_black_1000</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="MyAlertDialogStyleNew">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>
    <!-- Base application theme. -->
    
    <style name="Theme.AuthActivity" parent="Theme.Esh7enlyUser">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/launch_bg</item>

    </style>

</resources>