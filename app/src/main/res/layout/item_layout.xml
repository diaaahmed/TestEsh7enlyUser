<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.google.android.material.card.MaterialCardView
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="0.5dp"
            android:id="@+id/cardCategory"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clipToPadding="true"
            app:cardElevation="@dimen/_4ssp"
            app:cardCornerRadius="@dimen/_5ssp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/logo"
                    android:id="@+id/category_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

        <TextView
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="@dimen/_16ssp"
            app:autoSizeStepGranularity="@dimen/_1ssp"
            app:autoSizeMinTextSize="@dimen/_14ssp"
            app:fontFamily="@font/readexproextralight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardCategory"
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_5sdp"
            tools:text="فواتير الموبايل"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
