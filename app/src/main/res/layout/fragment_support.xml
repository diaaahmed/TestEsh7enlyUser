<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.SupportFragment">

        <LinearLayout
            android:elevation="@dimen/_20sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/gradiant_color_normal"
            android:id="@+id/app_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                tools:title="@string/support"
                app:titleTextColor="@color/white"
                android:id="@+id/support_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            app:strokeWidth="0.5dp"
            app:strokeColor="@color/colorPrimary"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/call_us"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/call_us_text"
                android:fontFamily="@font/readexrromedium"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/_8sdp"
                android:padding="@dimen/_10sdp"
                android:drawableStart="@drawable/callus"
                android:textColor="@color/colorPrimary"
                tools:text="@string/call_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:strokeWidth="0.5dp"
            app:strokeColor="@color/colorPrimary"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/call_us"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/chat_whatsapp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chat_whats_text"
                android:fontFamily="@font/readexrromedium"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/_8sdp"
                android:padding="@dimen/_10sdp"
                android:drawableStart="@drawable/whats_app"
                android:textColor="@color/colorPrimary"
                tools:text="@string/chatting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:strokeWidth="0.5dp"
            app:strokeColor="@color/colorPrimary"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/chat_whatsapp"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/send_email"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/send_email.text"
                android:fontFamily="@font/readexrromedium"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/_8sdp"
                android:padding="@dimen/_10sdp"
                android:drawableStart="@drawable/mail"
                android:textColor="@color/colorPrimary"
                tools:text="@string/send_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/sendMessageLayout"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/emailMsg"
                tools:hint="@string/enter_message"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSendMsg"
                tools:text="@string/send_message"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/emailMsg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>